/*公共区域*/
html,body {
	margin: 0;
}
.header-info,.post,.yiyan{
	border-radius: 5px;
  box-shadow: 1px 2px 3px #ddd;
}
body {
  font-family: "Times New Roman","Microsoft Jhenghei","Microsoft YaHei",serif;
  font-size: 16px;
  line-height: 200%;
  color: #666;
  font-weight: 400;
  overflow-x: hidden;
}

a{
  text-decoration:none;
  color: #666;
}


/**主体**/
.ibody{
	position: relative;
  height:100%;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  clear:both;
  padding: 20px;
}

.main {
	float:right;
	display: inline;
    float: left;
    width: 73.33333333333333%;
    margin: 0 .833333333333333%;
}

.highlight,.plain{
    border-left: 5px solid #e6e2e2d1;
    background: #ffffff73;
    margin: auto;
    overflow: auto;
    line-height: 19.4px;
}

.link-list{
    list-style: none;
    padding: 0;
    margin: 0;
    overflow: hidden;
}
.link-list .link-item{
      float: left;
    width: 50%;
    position: relative;
    transition: all .3s ease-out;
    border-radius: 5px;
    list-style: none;
}
.link-item a{
    display: block;
    padding: 0 10px 0 90px;
    height: 90px;
    color: #555;
}
.link-item a img{
    width: 60px;
    height: 60px;
    border-radius: 50%;
    position: absolute;
    top: 15px;
    left: 15px;
    cursor: pointer;
    margin: 0;
}
.link-item a h4{
    font-size: 16px;
}
.link-item a p {
    margin: 10px 0;
    line-height: 24px;
}


/*—滚动条默认显示样式–*/
::-webkit-scrollbar-thumb{
background-color:#018EE8;
height:50px;
outline-offset:-2px;
outline:2px solid #fff;
-webkit-border-radius:4px;
border: 2px solid #fff;
}

/*—鼠标点击滚动条显示样式–*/
::-webkit-scrollbar-thumb:hover{
background-color:#FB4446;
height:50px;
-webkit-border-radius:4px;
}

/*—滚动条大小–*/
::-webkit-scrollbar{
width:8px;
height:18px;
}

/*—滚动框背景样式–*/
::-webkit-scrollbar-track-piece{
background-color:#fff;
-webkit-border-radius:0;
}


/**雷姆**/
.sidebar_wo{position:fixed;line-height:0;bottom:0;z-index:1000;}
#leimu{left:0;-webkit-transition: all .3s ease-in-out;
  transition: all .3s ease-in-out;
  -webkit-transform: translate(-7px,7px);
  -ms-transform: translate(-7px,7px);
  transform: translate(-7px,7px);}
#lamu{-webkit-transition: all .3s ease-in-out;
  transition: all .3s ease-in-out;
  -webkit-transform: translate(7px,7px);
  -ms-transform: translate(7px,7px);
  transform: translate(7px,7px);right:0}
#leimu:hover{
  -webkit-transform: translate(0,0);
  -ms-transform: translate(0,0);
  transform: translate(0,0);
}
#lamu:hover {
  -webkit-transform: translate(0,0);
  -ms-transform: translate(0,0);
  transform: translate(0,0);
}
@media only screen and (max-width:1024px){.sidebar_wo{display:none}}

