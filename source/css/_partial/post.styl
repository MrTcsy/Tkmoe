.post {
  margin-bottom:20px;
  padding: 15px 15px;
  background-color: rgba(255,255,255,0.8);
  box-shadow: 1px 2px 3px #ddd;
  border: 1px solid #ddd;
}
.post p a{
  color: #0593d3;
  border-bottom: none;
  border-bottom: 1px solid #0593d3;
  &:hover {
    color: #fc6423;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}

.posts  {
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;

    .post-title-link {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-content {
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}

.post>.post-title{
  text-align: center;
  margin-bottom: 15px;
}